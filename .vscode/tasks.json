{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake: Configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-B", "build",
                "-S", ".",
                "-DCMAKE_BUILD_TYPE=Release",
                "-DPython3_EXECUTABLE=/opt/homebrew/bin/python3.13",
                "-DPython3_ROOT_DIR=/opt/homebrew/opt/python@3.13",
                "-DPython3_FIND_STRATEGY=LOCATION"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "CMake: Build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build",
                "--parallel"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": "CMake: Configure",
            "problemMatcher": "$gcc",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "CMake: Rebuild",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build",
                "--parallel",
                "--clean-first"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": "$gcc",
            "group": "build"
        },
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "/opt/homebrew/bin/python3.13",
            "args": ["${workspaceFolder}/test_bindings.py"],
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "PYTHONPATH": "${workspaceFolder}/build/scene_rdl2",
                    "DYLD_LIBRARY_PATH": "${env:REZ_MOONRAY_ROOT}/lib:${env:REZ_MOONRAY_ROOT}/../lib"
                }
            },
            "dependsOn": "CMake: Build",
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        }
    ]
}
